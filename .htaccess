<IfModule mod_deflate.c>
 <IfModule mod_filter.c>
  SetOutputFilter DEFLATE
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSI[E] !no-gzip !gzip-only-text/html
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
 </IfModule>
</IfModule>
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# SSL
RewriteCond %{REQUEST_URI} ^/registration [OR]
RewriteCond %{REQUEST_URI} ^/business
RewriteCond %{HTTP:X-Forwarded-Proto} !=https
RewriteRule ^/?(.*) https://%{HTTP_HOST}/$1 [R,L]

#ÈùûSSL
#RewriteCond %{REQUEST_URI} !(/registration)
#RewriteCond %{REQUEST_URI} !(/business)
#RewriteCond %{HTTP:X-Forwarded-Port} !^80$
#RewriteCond %{HTTP:X-Forwarded-Proto} =https
#RewriteRule ^/?(.*) http://%{HTTP_HOST}/$1 [R,L]

RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
Options +FollowSymLinks
RewriteCond %{HTTP_HOST} ^sibire\.co\.jp$
RewriteRule ^(.*)$ http://www.sibire.co.jp/$1 [R=301,L]
</IfModule>

FileETag None
<Files "\.(htm|php|css)">
 Header set Cache-Control "max-age=86400, public"
</Files>
<Files "\.(xml|txt)">
 Header set Cache-Control "max-age=3600, public"
</Files>
<Files "\.(ico|bmp|jpg|png|gif|js|swf)">
 Header set Cache-Control "max-age=604800, public"
</Files>
